#include <iostream>
#include <vector>
using namespace std;

// parent[x]: x번 게이트 이하에서 사용 가능한 가장 큰 게이트
vector<int> parent;

int find(int x) {
	if (parent[x] == x) return x;
	return parent[x] = find(parent[x]);
}

int main() {
	int G, P;
	cin >> G >> P;

	parent.assign(G + 1, 0);

	for (int i = 1; i <= G; i++) {
		parent[i] = i;
	}

	int ans = 0;

	for (int i = 0; i < P; i++) {
		int g;
		cin >> g;

		int gate = find(g);
		if (gate == 0) break; // 더 이상 사용 가능한 게이트가 없음

		ans++;
		parent[gate]--; // 사용했으니 1 감소
	}

	cout << ans;
}
