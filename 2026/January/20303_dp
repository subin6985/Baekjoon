// union find + dp
#include <iostream>
#include <vector>
using namespace std;

vector<int> parent;
vector<int> candyCnt;
vector<int> kidsCnt;

int getParent(int x) {
	if (parent[x] == x) return x;
	return parent[x] = getParent(parent[x]);
}

void unionParent(int a, int b) {
	a = getParent(a);
	b = getParent(b);

	if (a < b) parent[b] = a;
	else parent[a] = b;
}

int main() {
	int N, M, K;
	cin >> N >> M >> K;

	vector<int> candies(N + 1);
	parent.resize(N + 1);

	for (int i = 1; i <= N; i++) {
		cin >> candies[i];
		parent[i] = i;
	}

	for (int i = 0; i < M; i++) {
		int a, b;
		cin >> a >> b;

		unionParent(a, b);
	}

	for (int i = 1; i <= N; i++) {
		parent[i] = getParent(parent[i]);
	}

	vector<vector<int>> friends(N + 1);

	for (int i = 1; i <= N; i++) {
		int p = parent[i];

		if (p == i) continue;

		friends[p].push_back(i);
	}

	for (int i = 1; i <= N; i++) {
		if (parent[i] != i) continue;

		int candySum = candies[i];

		for (int f : friends[i]) candySum += candies[f];

		candyCnt.push_back(candySum);
		kidsCnt.push_back(friends[i].size() + 1);
	}

	vector<int> dp(K, 0);

	for (int i = 0; i < kidsCnt.size(); i++) {
		int candy = candyCnt[i];
		int kid = kidsCnt[i];

		if (kid >= K) continue;

		for (int j = K - 1; j >= kid; j--) {
			if (dp[j] < dp[j - kid] + candy) dp[j] = dp[j - kid] + candy;
		}
	}

	int result = 0;
	for (int n : dp) {
		if (n > result) result = n;
	}

	cout << result;
}
