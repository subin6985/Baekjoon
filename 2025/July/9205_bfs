#include <iostream>
#include <vector>
#include <queue>
#include <cmath>
using namespace std;

bool bfs(int n, vector<pair<int, int>>& crd) {
	queue<int> q;
	vector<bool> visited(n + 2, false);
	
	q.push(0); // 집(0번째 좌표)에서 시작
	visited[0] = true;
	
	while(!q.empty()) {
		int curr = q.front();
		q.pop();
		
		// 목적지 도착
		if (curr == n + 1) return true;
		
		for (int i = 0; i < n + 2; i++) {
			if (i != curr && !visited[i]) {
				int next = i;
        // 도달할 수 있으면 연결 (입력한 좌표 순서대로 방문하지 않을 수 있음)
				if (abs(crd[i].first - crd[curr].first) + abs(crd[i].second - crd[curr].second) <= 1000) {
					visited[i] = true;
					q.push(i);
				}
			}
		}
	}
	
	return false;
}

int main() {
	int t;
	cin >> t;
	
	while (t--) {
		int n;
		cin >> n;
		
		vector<pair<int, int>> crd(n + 2);
		for (int i = 0; i < n + 2; i++) {
			cin >> crd[i].first >> crd[i].second;
		}
		
		if (bfs(n, crd)) cout << "happy\n";
		else cout << "sad\n";
	}
}
