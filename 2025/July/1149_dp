#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
	int n;
	cin >> n;
	
	vector<vector<int>> cost(n, vector<int>(3)); // 집 별 색칠 비용
	vector<vector<int>> dp(n, vector<int>(3)); // i번째 집을 특정 색깔로 칠했을 때까지의 최소 비용
	
	for (int i = 0; i < n; i++) {
		cin >> cost[i][0] >> cost[i][1] >> cost[i][2];
	}

 // 초기값: 첫 번째 집
	dp[0][0] = cost[0][0]; // 첫 번째 집이 빨간색일 경우
	dp[0][1] = cost[0][1]; // 초록색일 경우
	dp[0][2] = cost[0][2]; // 파란색일 경우
	
	for (int i = 1; i < n; i++) {
   // i-1번째 집이 각각 RGB가 아닐 경우의 최소값에 해당 RGB 비용 합산
		dp[i][0] = min(dp[i-1][1], dp[i-1][2]) + cost[i][0]; // i번째 색이 빨간색일 때 최소 비용
		dp[i][1] = min(dp[i-1][0], dp[i-1][2]) + cost[i][1];
		dp[i][2] = min(dp[i-1][0], dp[i-1][1]) + cost[i][2];
	}
	
	cout << min({dp[n-1][0], dp[n-1][1], dp[n-1][2]}); // min은 2개의 인자만 받기 때문에 {}로 감싸줘야 함
}
