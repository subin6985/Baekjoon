#if 1
#include <iostream>
#include <string>
#include <vector>
#include <cmath>
#include <queue>
using namespace std;

int main() {
	int N;
	cin >> N;

	vector<string> words;
	vector<int> weight(26, 0);

	for (int i = 0; i < N; i++) {
		string word; cin >> word;
		words.push_back(word);

		// 자릿수에 따라 1, 10, 100... 으로 가중치를 부여하여 합산
		for (int j = 0; j < word.size(); j++) {
			weight[word[j] - 'A'] += pow(10, word.size() - 1 - j);
		}
	}

	// 가중치가 높은 알파벳 순으로 정렬
	priority_queue<pair<int, char>> pq; // { weight, char }

	for (int i = 0; i < 26; i++) {
		if (weight[i] != 0) pq.push({ weight[i], i + 'A' });
	}

	bool used[10] = { false, };
	vector<int> alpToNum(26, -1);

	while (!pq.empty()) {
		int num = pq.top().second - 'A'; pq.pop();

		// 가중치가 높으면 9에서부터 숫자 부여 (그리디)
		for (int i = 9; i >= 0; i--) {
			if (!used[i]) {
				alpToNum[num] = i;
				used[i] = true;
				break;
			}
		}
	}

	// 부여된 숫자로 변경한 뒤 합산
	int res = 0;
	for (string word : words) {
		int change = 0;

		for (int i = word.size() - 1; i >= 0; i--) {
			change += alpToNum[word[i] - 'A'] * pow(10, word.size() - 1 - i);
		}

		res += change;
	}

	cout << res;
}
#endif
