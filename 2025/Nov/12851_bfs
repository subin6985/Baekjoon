#include <iostream>
#include <vector>
#include <queue>
using namespace std;

int main() {
	int N, K;
	cin >> N >> K;

	int max = 200001;

	vector<int> res(max, 1e9);
	res[N] = 0;

	queue<int> q;
	q.push(N);

	vector<int> cnt(max, 0);
	cnt[N] = 1;

	if (N == K) {
		cout << 0 << "\n" << 1;

		return 0;
	}

	while (!q.empty()) {
		int size = q.size();

		for (int i = 0; i < size; i++) {
			int x = q.front(); q.pop();

			if (x + 1 < max) {
				if (res[x] + 1 == res[x + 1]) cnt[x + 1] += cnt[x];
				else if (res[x] + 1 < res[x + 1]) {
					res[x + 1] = res[x] + 1;
					q.push(x + 1);
					cnt[x + 1] = cnt[x];
				}
			}

			if (x - 1 >= 0) {
				if (res[x] + 1 == res[x - 1]) cnt[x - 1] += cnt[x];
				else if (res[x] + 1 < res[x - 1]) {
					res[x - 1] = res[x] + 1;
					q.push(x - 1);
					cnt[x - 1] = cnt[x];
				}
			}

			if (2 * x < max) {
				if (res[x] + 1 == res[2 * x]) cnt[2 * x] += cnt[x];
				else if (res[x] + 1 < res[2 * x]) {
					res[2 * x] = res[x] + 1;
					q.push(2 * x);
					cnt[2 * x] = cnt[x];
				}
			}
		}
	}

	cout << res[K] << "\n" << cnt[K];

}
